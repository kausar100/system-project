<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#396964"
    tools:context=".TakeCtMarkActivity">

    <RelativeLayout
        android:background="#396964"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/ctdepartmentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/dept_choose" />
        <Spinner
            android:id="@+id/ctno"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/ct_no" />
    </RelativeLayout>


    <EditText
        android:id="@+id/batchNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Batch Number of Students"
        android:inputType="number" />

    <RelativeLayout
        android:background="#396964"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/round_shape_build"
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show the Student list" />
        <Button
            android:background="@drawable/round_shape_build"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showctmarkID"
            android:text="click for view ct mark"/>
    </RelativeLayout>



    <ListView
        android:background="#396964"
        android:padding="10dp"
        android:id="@+id/listStudent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/material_blue_grey_800"
        android:dividerHeight="1dp"/>

</LinearLayout>